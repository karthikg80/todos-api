{
  "name": "todos-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npx prisma migrate deploy && node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "build": "npx prisma generate && tsc",
    "postinstall": "npm run build",
    "test": "npm run test:unit",
    "test:all": "NODE_ENV=test jest --runInBand",
    "test:unit": "NODE_ENV=test SKIP_DB_SETUP=true jest --config jest.unit.config.js --runInBand",
    "test:integration": "NODE_ENV=test EMAIL_FEATURES_ENABLED=false jest --config jest.integration.config.js --runInBand",
    "test:ci": "npx tsc --noEmit && npm run test:unit",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand",
    "test:ui": "playwright test",
    "test:ui:fast": "playwright test --grep-invert @visual",
    "test:ui:update": "playwright test --update-snapshots",
    "test:ui:headed": "playwright test --headed",
    "lint:css": "stylelint \"public/**/*.html\" --custom-syntax postcss-html",
    "lint:html": "html-validate \"public/**/*.html\"",
    "test:links": "start-server-and-test \"node scripts/ui-static-server.mjs\" http://127.0.0.1:4173 \"linkinator http://127.0.0.1:4173 --recurse --skip 'mailto:|tel:|^https?://(?!127\\\\.0\\\\.0\\\\.1:4173)'\"",
    "format:check": "prettier --check \"{src,test,tests,public,prisma,scripts}/**/*.{ts,js,json,md,html,css}\" \"*.{md,json,yml,yaml}\" \".github/workflows/*.{yml,yaml}\"",
    "audit:prod": "npm audit --omit=dev --audit-level=high",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "prisma:migrate:status": "npx prisma migrate status",
    "prisma:migrate:check": "npx prisma validate",
    "prisma:studio": "npx prisma studio",
    "prisma:reset": "npx prisma migrate reset",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "docker:logs": "docker-compose logs -f postgres",
    "db:setup": "npm run docker:up && sleep 3 && npm run prisma:migrate",
    "db:seed": "ts-node prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "@types/cors": "^2.8.19",
    "@types/node": "^25.2.1",
    "@types/nodemailer": "^7.0.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^8.0.1",
    "prisma": "^6.19.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "html-validate": "^10.0.0",
    "jest": "^30.2.0",
    "linkinator": "^7.5.3",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.1",
    "prettier": "^3.6.2",
    "start-server-and-test": "^2.1.3",
    "stylelint": "^17.1.1",
    "stylelint-config-standard": "^40.0.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2"
  }
}
